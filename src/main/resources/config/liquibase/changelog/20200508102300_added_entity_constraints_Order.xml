<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Order.
    -->
    <changeSet id="20200508102300-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="offer_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order_offer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="offer"/>

        <addForeignKeyConstraint baseColumnNames="buyer_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order_buyer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="enquiry_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order_enquiry_id"
                                 referencedColumnNames="id"
                                 referencedTableName="enquiry"/>

        <addForeignKeyConstraint baseColumnNames="enquiry_details_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order_enquiry_details_id"
                                 referencedColumnNames="id"
                                 referencedTableName="enquiry_details"/>

    </changeSet>
</databaseChangeLog>
