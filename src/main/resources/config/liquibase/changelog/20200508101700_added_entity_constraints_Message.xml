<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Message.
    -->
    <changeSet id="20200508101700-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="from_id"
                                 baseTableName="message"
                                 constraintName="fk_message_from_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="to_id"
                                 baseTableName="message"
                                 constraintName="fk_message_to_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="created_by_id"
                                 baseTableName="message"
                                 constraintName="fk_message_created_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="enquiry_id"
                                 baseTableName="message"
                                 constraintName="fk_message_enquiry_id"
                                 referencedColumnNames="id"
                                 referencedTableName="enquiry"/>

        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="message"
                                 constraintName="fk_message_order_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_order"/>

        <addForeignKeyConstraint baseColumnNames="offer_id"
                                 baseTableName="message"
                                 constraintName="fk_message_offer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="offer"/>

        <addForeignKeyConstraint baseColumnNames="reply_message_id"
                                 baseTableName="message"
                                 constraintName="fk_message_reply_message_id"
                                 referencedColumnNames="id"
                                 referencedTableName="message"/>

    </changeSet>
</databaseChangeLog>
