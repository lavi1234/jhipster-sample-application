<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Favourites.
    -->
    <changeSet id="20200508101500-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="from_profile_id"
                                 baseTableName="favourites"
                                 constraintName="fk_favourites_from_profile_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="to_profile_id"
                                 baseTableName="favourites"
                                 constraintName="fk_favourites_to_profile_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

    </changeSet>
</databaseChangeLog>
